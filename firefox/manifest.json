{
	"manifest_version": 3,
	"name":"Twishare to Misskey",
	"version":"0.2.5",
	"description":"Twitter のシェアボタンから Misskey にシェアすることができるようにします。",
	"browser_specific_settings": {
		"gecko": {
			"id": "twishare-to-misskey@alpaca-honke.github.io"
		},
		"gecko_android": {
			"id": "twishare-to-misskey@alpaca-honke.github.io"
		}
	},
	"icons":{
		"16":"icons/16.png", 
		"48":"icons/48.png",
		"128":"icons/128.png"
	},
	"content_scripts":[
		{
			"run_at":"document_start",
			"matches":["https://twitter.com/intent/tweet*","http://twitter.com/intent/tweet*","https://x.com/intent/tweet*","http://x.com/intent/tweet*"],
			"js":["js_and_css/on_twitter_intent.js"]
		},
		{
			"run_at": "document_end",
			"matches": ["<all_urls>"],
			"js": ["js_and_css/allpages.js"],
			"css": ["js_and_css/allpages.css"]
		}
	],
	"background": {
		"page": "",
		"scripts": ["js_and_css/background.js"],
		"type": "module"
	},
	"action": {
		"default_icon": {
			"16": "icons/16.png",
			"48": "icons/48.png",
			"128": "icons/128.png"
		},
		"default_title": "Twishare to Misskeyの設定",
		"default_popup": "options/options.html"
	},
	"options_ui": {
		"page": "options/options.html"
	},
	"web_accessible_resources": [
		{
			"resources": ["assets/share.png"],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": ["storage"],
	"author":"Alkappa/alpaca-honke",
	"homepage_url":"https://github.com/alpaca-honke/twishare-to-misskey/"
}
