{
	"manifest_version": 2,
	"name":"Twishare to Misskey for Firefox",
	"version":"0.0.2",
	"description":"Twitter のシェアボタンから Misskey.io シェアすることができるようにします。",
	"icons":{
		"16":"icons/16.png", 
		"48":"icons/48.png",
		"128":"icons/128.png"
	},
	"content_scripts":[
		{
			"run_at":"document_start",
			"matches":["https://twitter.com/intent/tweet*","http://twitter.com/intent/tweet*"],
			"js":["script.js"]
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/16.png",
			"48": "icons/48.png",
			"128": "icons/128.png"
		},
		"default_title": "共有先のサーバー名の設定",
		"default_popup": "options.html"
	},
	"options_ui": {
		"page": "options.html"
	},
	"permissions": ["storage"],
	"author":"Alkappa/alpaca-honke",
	"homepage_url":"https://github.com/alpaca-honke/twishare-to-io/"
}
